<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for De1984 - Light Mode -->
    <style name="Theme.De1984" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/lineage_teal</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Window background for splash/loading screen with logo -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- AppCompat theme for Views-based activities -->
    <style name="Theme.De1984.Views" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Enable edge-to-edge -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Material 3 color scheme - De1984 teal theme (used when Dynamic Colors are disabled) -->
        <item name="colorPrimary">@color/lineage_teal</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorPrimaryContainer">@color/lineage_teal</item>
        <item name="colorOnPrimaryContainer">@color/text_white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <!-- Compact TextInputLayout for search boxes -->
    <style name="Widget.De1984.TextInputLayout.Compact" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCollapsedPaddingTop">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="suffixTextAppearance">@style/TextAppearance.De1984.SuffixText</item>
        <!-- Disable border color change on focus - keep same color as unfocused -->
        <item name="boxStrokeColor">@color/search_box_stroke</item>
    </style>

    <!-- Text appearance for suffix text in search boxes -->
    <style name="TextAppearance.De1984.SuffixText" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Material Design 3 Bottom Navigation -->
    <style name="Widget.De1984.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.De1984.BottomNavigationView</item>
        <item name="android:background">?attr/colorPrimaryContainer</item>
        <item name="elevation">8dp</item>
        <item name="itemIconSize">28dp</item>
        <!-- itemIconTint and itemTextColor are set programmatically in MainActivity -->
        <item name="itemRippleColor">@null</item>
        <item name="itemBackground">@drawable/bottom_nav_item_background</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:minHeight">60dp</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemPaddingBottom">0dp</item>
    </style>

    <!-- Bottom Navigation Theme Overlay -->
    <style name="ThemeOverlay.De1984.BottomNavigationView" parent="">
        <item name="colorOnSurface">?attr/colorOnPrimaryContainer</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnPrimaryContainer</item>
        <item name="colorSurface">?attr/colorPrimaryContainer</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.De1984.BottomNavigation.Label</item>
    </style>

    <!-- Custom text appearance for bottom navigation labels with reduced spacing -->
    <style name="TextAppearance.De1984.BottomNavigation.Label" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Custom Button Style - Primary color background with white text (like selected chips) -->
    <style name="Widget.De1984.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>
