<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked (ON) state - Use Material 3 primary color (supports Dynamic Colors) -->
    <item android:color="?attr/colorPrimary" android:state_checked="true"/>
    <!-- Unchecked (OFF) state - Use red to make it more visible -->
    <item android:color="@color/error_red"/>
</selector>

