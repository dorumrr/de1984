<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout with popup menu navigation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Bar with Firewall Toggle -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:fitsSystemWindows="false"
        app:elevation="2dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:background="@color/lineage_teal"
            android:clipToPadding="false"
            android:contentInsetStart="0dp"
            android:contentInsetStartWithNavigation="0dp"
            android:theme="@style/ThemeOverlay.Material3.Dark"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:titleTextColor="@color/white">

            <!-- Custom toolbar content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingEnd="4dp">

                <!-- Logo + Title Group -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp">

                    <!-- App Logo -->
                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/de1984_logo"
                        android:contentDescription="De1984 Logo" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FIREWALL"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                </LinearLayout>

                <!-- Spacer to push status and menu to the right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Section Icon (visible on Apps/Settings tabs, on the right) -->
                <ImageView
                    android:id="@+id/toolbar_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    android:contentDescription="Section Icon"
                    app:tint="@color/white" />

                <!-- Status Badge + Switch Group -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- ACTIVE Badge (visible when firewall is on, before switch) -->
                    <TextView
                        android:id="@+id/firewall_active_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="ACTIVE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/status_badge_active"
                        android:visibility="gone" />

                    <!-- INACTIVE Badge (visible when firewall is off, before switch) -->
                    <TextView
                        android:id="@+id/firewall_off_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="INACTIVE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/status_badge_error"
                        android:visibility="gone" />

                    <!-- Firewall Toggle Switch (visible only on Firewall tab) -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/firewall_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:thumbTint="@color/white"
                        app:trackTint="@color/switch_track_color"
                        app:trackDecorationTint="@android:color/transparent" />

                </LinearLayout>

                <!-- Three-dot Menu Icon (on the right) -->
                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_more_vert"
                    android:contentDescription="Menu"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/white" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

