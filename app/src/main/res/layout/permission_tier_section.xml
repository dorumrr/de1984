<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Title and Status Badge Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tier_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Basic Functionality"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/tier_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup Required"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/status_badge_background"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/tier_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View installed packages and basic information"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary" />

    <!-- Permissions List Container -->
    <LinearLayout
        android:id="@+id/permissions_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical" />

    <!-- Setup Button Container -->
    <LinearLayout
        android:id="@+id/setup_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant Permission"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- Root Status Container (for Advanced tier only) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/root_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/outline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Status Title with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/root_status_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="Status icon" />

                <TextView
                    android:id="@+id/root_status_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Root Access: Not Available"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/root_status_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Your device is not rooted. Root access is required for advanced package management operations."
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="?android:attr/textColorSecondary" />

            <!-- Instructions (for denied state) -->
            <TextView
                android:id="@+id/root_status_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Your device needs to be rooted to use advanced package management features."
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="?android:attr/textColorSecondary"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Rooting Tools Card (separate from status) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rooting_tools_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/outline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Rooting Tools Title -->
            <TextView
                android:id="@+id/rooting_tools_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended rooting tools:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

            <!-- Rooting Tools Body -->
            <TextView
                android:id="@+id/rooting_tools_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="• Magisk - Most popular and widely supported root solution.\n• KernelSU - Modern kernel-based root management.\n• APatch - Newer alternative with kernel patching approach."
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.3"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

