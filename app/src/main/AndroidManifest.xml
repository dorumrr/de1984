<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Tier 1: Basic permissions (automatically granted) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Battery optimization exemption (for VPN service reliability) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Shortcut creation permission -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <!-- VPN permission for firewall functionality -->
    <uses-permission android:name="android.permission.BIND_VPN_SERVICE" />

    <!-- Tier 2: Runtime permissions (user must grant) -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Tier 3: System permissions (require root/ADB/system access) -->
    <!-- These are declared but not expected to be granted to regular apps -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.CHANGE_COMPONENT_ENABLED_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.GET_TASKS"
        tools:ignore="ProtectedPermissions" />

    <!-- Root access (when available) -->
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".De1984Application"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.De1984"
        android:requestLegacyExternalStorage="false"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.De1984">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- VPN Service for firewall functionality -->
        <service
            android:name=".data.service.FirewallVpnService"
            android:exported="false"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:foregroundServiceType="specialUse">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="firewall" />
        </service>

        <!-- Package monitoring service for new app notifications -->
        <service
            android:name=".data.service.PackageMonitoringService"
            android:exported="false" />

        <!-- Boot receiver to restore firewall state after device reboot -->
        <receiver
            android:name=".data.receiver.BootReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- Package added receiver for new app notifications -->
        <receiver
            android:name=".data.receiver.PackageAddedReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="500">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Notification action receiver for new app notification buttons -->
        <receiver
            android:name=".data.receiver.NewAppNotificationReceiver"
            android:exported="false"
            android:enabled="true" />

    </application>

</manifest>
