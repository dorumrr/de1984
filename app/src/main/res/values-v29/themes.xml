<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- AppCompat theme for Views-based activities (API 29+) -->
    <style name="Theme.De1984.Views" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Enable edge-to-edge -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Material 3 color scheme - De1984 teal theme (used when Dynamic Colors are disabled) -->
        <item name="colorPrimary">@color/lineage_teal</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorPrimaryContainer">@color/lineage_teal</item>
        <item name="colorOnPrimaryContainer">@color/text_white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
</resources>

