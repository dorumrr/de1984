<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for De1984 - Light Mode -->
    <style name="Theme.De1984" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/lineage_teal</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Window background for splash/loading screen with logo -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- AppCompat theme for Views-based activities -->
    <style name="Theme.De1984.Views" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Enable edge-to-edge -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Compact TextInputLayout for search boxes -->
    <style name="Widget.De1984.TextInputLayout.Compact" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCollapsedPaddingTop">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- Material Design 3 Bottom Navigation -->
    <style name="Widget.De1984.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.De1984.BottomNavigationView</item>
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="elevation">8dp</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:minHeight">64dp</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemPaddingTop">0dp</item>
        <item name="itemPaddingBottom">0dp</item>
    </style>

    <!-- Bottom Navigation Theme Overlay -->
    <style name="ThemeOverlay.De1984.BottomNavigationView" parent="">
        <item name="colorOnSurface">@color/text_white</item>
        <item name="colorOnSurfaceVariant">@color/text_white</item>
        <item name="colorSurface">@color/bottom_nav_background</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="Widget.De1984.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_nav_selected_background</item>
        <item name="android:width">90dp</item>
        <item name="android:height">48dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.De1984.BottomNavigationView.ActiveIndicator</item>
    </style>

    <!-- Shape for Bottom Navigation Active Indicator (slightly rounded corners) -->
    <style name="ShapeAppearance.De1984.BottomNavigationView.ActiveIndicator" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Custom Button Style - Teal background with white text (like selected chips) -->
    <style name="Widget.De1984.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/lineage_teal</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
</resources>
