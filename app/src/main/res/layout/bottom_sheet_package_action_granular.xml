<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with App Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/action_sheet_app_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/de1984_icon"
                android:contentDescription="@string/cd_app_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/action_sheet_app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_sheet_placeholder_app_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/action_sheet_package_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/action_sheet_placeholder_package_name"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/action_sheet_settings_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_settings"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/cd_open_app_settings"
                app:tint="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Protection Warning Banner -->
        <include
            android:id="@+id/protection_warning_banner"
            layout="@layout/protection_warning_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:alpha="0.3"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_sheet_section_network_access"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="4dp"
            android:paddingBottom="12dp" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:alpha="0.3"
            android:layout_marginBottom="12dp" />

        <!-- WiFi Toggle -->
        <include
            android:id="@+id/wifi_toggle"
            layout="@layout/network_type_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:alpha="0.3"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Mobile Data Toggle -->
        <include
            android:id="@+id/mobile_toggle"
            layout="@layout/network_type_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Divider -->
        <View
            android:id="@+id/roaming_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:alpha="0.3"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Roaming Toggle (only shown if device has cellular) -->
        <include
            android:id="@+id/roaming_toggle"
            layout="@layout/network_type_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- LAN Divider -->
        <View
            android:id="@+id/lan_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:alpha="0.3"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- LAN Toggle (only shown if using iptables backend) -->
        <include
            android:id="@+id/lan_toggle"
            layout="@layout/network_type_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Divider -->
        <View
            android:id="@+id/foreground_only_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:alpha="0.3"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Background Access Toggle (only shown when app is allowed) -->
        <include
            android:id="@+id/foreground_only_toggle"
            layout="@layout/network_type_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Loading Indicator -->
        <LinearLayout
            android:id="@+id/loading_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/action_sheet_status_updating"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Info message (shown only when using VPN backend) -->
        <TextView
            android:id="@+id/info_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:alpha="0.7"
            android:lineSpacingMultiplier="1.2"
            android:visibility="gone" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:alpha="0.3"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- Package Control Action -->
        <LinearLayout
            android:id="@+id/manage_app_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_apps"
                app:tint="?android:attr/textColorPrimary"
                android:contentDescription="@string/cd_package_control_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_sheet_section_package_control"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/action_sheet_section_package_control_desc"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

