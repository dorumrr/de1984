<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="96dp"
        android:clipToPadding="false">

            <!-- Contribution Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸš€ Contribute"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Help improve De1984 Firewall by contributing code, reporting bugs, or suggesting features."
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/contribute_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Contribute on GitHub â†’"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/lineage_teal"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Dependencies Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- AndroidX Core KTX -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AndroidX Core KTX"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v1.13.1"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- AndroidX AppCompat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AndroidX AppCompat"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v1.7.0"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- Material Components -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Material Components"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v1.11.0"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- AndroidX ConstraintLayout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AndroidX ConstraintLayout"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v2.1.4"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- AndroidX Navigation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AndroidX Navigation"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v2.8.4"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- AndroidX Lifecycle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AndroidX Lifecycle"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v2.8.7"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- AndroidX Fragment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AndroidX Fragment"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v1.8.5"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- AndroidX RecyclerView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AndroidX RecyclerView"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v1.3.2"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- Shizuku -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shizuku"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v13.1.5"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Footer -->
            <TextView
                android:id="@+id/footer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/footer_tagline"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center" />

            <!-- Donate Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <include layout="@layout/donate_button" />

            </LinearLayout>

        </LinearLayout>

</androidx.core.widget.NestedScrollView>
