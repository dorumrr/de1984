<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Tier 1: Basic permissions (automatically granted) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Battery optimization exemption (for VPN service reliability) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"
        tools:ignore="BatteryLife" />

    <!-- Shortcut creation permission -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <!-- VPN permission for firewall functionality -->
    <!-- BIND_VPN_SERVICE is allowed for VPN apps, not system-only -->
    <uses-permission android:name="android.permission.BIND_VPN_SERVICE"
        tools:ignore="ProtectedPermissions" />

    <!-- Tier 2: Runtime permissions (user must grant) -->
    <!-- QUERY_ALL_PACKAGES is required for firewall functionality to see all apps -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Tier 3: System permissions (require root/ADB/system access) -->
    <!-- These are declared but not expected to be granted to regular apps -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.CHANGE_COMPONENT_ENABLED_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"
        tools:ignore="ProtectedPermissions" />

    <!-- Root access (when available) -->
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER"
        tools:ignore="ProtectedPermissions" />

    <!-- Shizuku/SUI API permission (required for Shizuku and Sui integration) -->
    <uses-permission android:name="moe.shizuku.manager.permission.API_V23" />

    <application
        android:name=".De1984Application"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.De1984"
        android:requestLegacyExternalStorage="false"
        tools:targetApi="31">
        
        <!-- Main activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.De1984.Views">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Transparent activity for VPN permission requests from widget/tile -->
        <activity
            android:name=".ui.VpnPermissionActivity"
            android:exported="false"
            android:theme="@style/Theme.De1984.Transparent"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:taskAffinity=""
            android:launchMode="singleInstance" />

        <!-- Logs Activity -->
        <activity
            android:name=".ui.logs.LogsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.De1984.Views"
            android:parentActivityName=".ui.MainActivity" />

        <!-- FileProvider for sharing logs -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- VPN Service for firewall functionality -->
        <service
            android:name=".data.service.FirewallVpnService"
            android:exported="false"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:foregroundServiceType="specialUse">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="firewall" />
        </service>

        <!-- Privileged Firewall Service for iptables/ConnectivityManager/NetworkPolicyManager backends -->
        <service
            android:name=".data.service.PrivilegedFirewallService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="firewall" />
        </service>

        <!-- Backend Monitoring Service for automatic backend switching after boot -->
        <service
            android:name=".data.service.BackendMonitoringService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="firewall" />
        </service>

        <!-- Package monitoring service for new app notifications -->
        <service
            android:name=".data.service.PackageMonitoringService"
            android:exported="false" />

        <!-- Shizuku provider for elevated privileges -->
        <provider
            android:name="rikka.shizuku.ShizukuProvider"
            android:authorities="${applicationId}.shizuku"
            android:multiprocess="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL" />

        <!-- Boot receiver to restore firewall state after device reboot -->
        <receiver
            android:name=".data.receiver.BootReceiver"
            android:directBootAware="true"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- Package added receiver for new app notifications -->
        <receiver
            android:name=".data.receiver.PackageAddedReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="500">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Package changed receiver for external app enable/disable -->
        <receiver
            android:name=".data.receiver.PackageChangedReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="500">
                <action android:name="android.intent.action.PACKAGE_CHANGED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Notification action receiver for new app notification button clicks -->
        <receiver
            android:name=".data.receiver.NotificationActionReceiver"
            android:exported="false"
            android:enabled="true" />

        <!-- Firewall toggle receiver for widget, tile, and notification actions -->
        <receiver
            android:name=".data.receiver.FirewallToggleReceiver"
            android:exported="false"
            android:enabled="true" />

        <!-- Quick Settings Tile for firewall toggle -->
        <service
            android:name=".ui.tile.FirewallTileService"
            android:exported="true"
            android:icon="@drawable/ic_notification_de1984"
            android:label="@string/tile_label_firewall"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <meta-data
                android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="true" />
            <meta-data
                android:name="android.service.quicksettings.TOGGLEABLE_TILE"
                android:value="true" />
        </service>

        <!-- Activity alias for tile long press - opens MainActivity -->
        <activity-alias
            android:name=".ui.tile.TileSettingsActivity"
            android:targetActivity=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES" />
            </intent-filter>
        </activity-alias>

        <!-- Home screen widget for firewall status and toggle -->
        <receiver
            android:name=".ui.widget.FirewallWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="io.github.dorumrr.de1984.FIREWALL_STATE_CHANGED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <!-- Language switcher support for Android 12 and lower -->
        <service
            android:name="androidx.appcompat.app.AppLocalesMetadataHolderService"
            android:enabled="false"
            android:exported="false">
            <meta-data
                android:name="autoStoreLocales"
                android:value="true" />
        </service>

    </application>

</manifest>
