<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Title and Status Badge Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tier_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Basic Functionality"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/tier_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup Required"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/status_badge_background"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/tier_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View installed packages and basic information"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary" />

    <!-- Permissions List Container -->
    <LinearLayout
        android:id="@+id/permissions_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical" />

    <!-- Setup Button Container -->
    <LinearLayout
        android:id="@+id/setup_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant Permission"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- Root Status Container (for Advanced tier only) -->
    <LinearLayout
        android:id="@+id/root_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/root_status_background"
        android:visibility="gone">

        <TextView
            android:id="@+id/root_status_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Root Status: Not Available"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/root_status_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Your device is not rooted. Root access is required for advanced package management operations."
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/root_status_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your device needs to be rooted to use advanced package management features."
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rooting_tools_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Recommended rooting tools:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rooting_tools_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="• Magisk - Most popular and widely supported root solution.\n• KernelSU - Modern kernel-based root management.\n• APatch - Newer alternative with kernel patching approach."
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

