<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/de1984_icon"
            android:contentDescription="@string/cd_app_icon" />

        <!-- Package Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <!-- App Name -->
            <TextView
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_sheet_placeholder_app_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Package Name -->
            <TextView
                android:id="@+id/package_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/action_sheet_placeholder_package_name"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- System Critical Badge -->
            <TextView
                android:id="@+id/system_critical_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/firewall_badge_system_critical"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/error_red"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/badge_background"
                android:visibility="gone" />

            <!-- VPN App Badge -->
            <TextView
                android:id="@+id/vpn_app_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/firewall_badge_vpn_app"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/badge_background_vpn"
                android:visibility="gone" />

            <!-- No Internet Permission Badge -->
            <TextView
                android:id="@+id/no_internet_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/firewall_badge_no_internet"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/badge_background_no_internet"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Badges Column (Right Side) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="end|center_vertical">

            <!-- Network Status Icons Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- WiFi Icon with overlay -->
                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp">

                    <ImageView
                        android:id="@+id/wifi_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wifi"
                        android:contentDescription="@string/cd_wifi_status" />

                    <ImageView
                        android:id="@+id/wifi_blocked_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_blocked_overlay"
                        android:visibility="gone"
                        android:contentDescription="@string/cd_wifi_blocked" />
                </FrameLayout>

                <!-- Mobile Icon with overlay -->
                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp">

                    <ImageView
                        android:id="@+id/mobile_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_mobile"
                        android:contentDescription="@string/cd_mobile_data_status" />

                    <ImageView
                        android:id="@+id/mobile_blocked_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_blocked_overlay"
                        android:visibility="gone"
                        android:contentDescription="@string/cd_mobile_blocked" />
                </FrameLayout>

                <!-- Roaming Icon with overlay (conditionally visible) -->
                <FrameLayout
                    android:id="@+id/roaming_container"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/roaming_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_roaming"
                        android:contentDescription="@string/cd_roaming_status" />

                    <ImageView
                        android:id="@+id/roaming_blocked_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_blocked_overlay"
                        android:visibility="gone"
                        android:contentDescription="@string/cd_roaming_blocked" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

